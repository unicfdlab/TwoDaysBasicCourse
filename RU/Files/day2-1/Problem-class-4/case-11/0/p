FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 1000;

boundaryField
{
    inlet
    {
        type            totalPressure;
        phi		phi;
        psi		none;
        gamma		1.3;
        p0		uniform 1000;
        value		uniform 1000;
    }

    outlet
    {
        type            totalPressure;
        phi		phi;
        psi		none;
        gamma		1.3;
        p0		uniform 0;
        value		uniform 0;
    }

    walls
    {
        type            zeroGradient;
    }

    defaultFaces
    {
        type            empty;
    }
}

